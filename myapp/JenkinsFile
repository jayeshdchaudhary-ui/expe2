pipeline {
    agent any

    tools {
        maven 'Maven-3.9.11'   // matches the name you gave in Jenkins
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/jayeshdchaudhary-ui/expe2.git'
            }
        }

        stage('Build') {
            steps {
                bat "mvn clean package"
            }
        }

        stage('Deploy to Tomcat') {
            steps {
                bat """
                curl -u tomcat:s3cret ^
                    --upload-file target/myapp.war ^
                    "http://localhost:8080/manager/text/deploy?path=/myapp&update=true"
                """
            }
        }
    }
}
