pipeline {
    agent any

    tools {
        maven 'Maven-3.9.11'   // Must match the Maven name in Jenkins -> Global Tool Config
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/jayeshdchaudhary-ui/expe2.git'
            }
        }

        stage('Build') {
            steps {
                dir('myapp') {   // move into the folder where pom.xml lives
                    bat "mvn clean package"
                }
            }
        }

        stage('Deploy to Tomcat') {
            steps {
                dir('myapp') {   // deploy the war from inside myapp
                    bat """
                    curl -u tomcat:s3cret ^
                        --upload-file target/myapp.war ^
                        "http://localhost:8080/manager/text/deploy?path=/myapp&update=true"
                    """
                }
            }
        }
    }
}
